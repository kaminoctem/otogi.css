/**
 * base/helpers.styl
 * @author kaminoctem
 */

/** Color */
for key, value in $colors
  .forecolor-{key}
    color: value !important
  .backcolor-{key}
    background-color: value !important

/** Typography */
.is-italic
  font-style: italic !important

.is-oblique
  font-style: italic !important

.is-capitalized
  text-transform: capitalize !important

.is-lowercase
  text-transform: lowercase !important

.is-uppercase
  text-transform: uppercase !important

for num in (1..9)
  .padding-0{num}
    padding: 0.1em * num
  .padding-left-0{num}
    padding-left: 0.1em * num
  .padding-top-0{num}
    padding-top: 0.1em * num
  .padding-right-0{num}
    padding-right: 0.1em * num
  .padding-bottom-0{num}
    padding-bottom: 0.1em * num
  .margin-0{num}
    margin: 0.1em * num
  .margin-left-0{num}
    margin-left: 0.1em * num
  .margin-top-0{num}
    margin-top: 0.1em * num
  .margin-right-0{num}
    margin-right: 0.1em * num
  .margin-bottom-0{num}
    margin-bottom: 0.1em * num

for num in (1..9)
  .padding-{num}
    padding: 1em * num
  .padding-left-{num}
    padding-left: 1em * num
  .padding-top-{num}
    padding-top: 1em * num
  .padding-right-{num}
    padding-right: 1em * num
  .padding-bottom-{num}
    padding-bottom: 1em * num
  .margin-{num}
    margin: 1em * num
  .margin-left-{num}
    margin-left: 1em * num
  .margin-top-{num}
    margin-top: 1em * num
  .margin-right-{num}
    margin-right: 1em * num
  .margin-bottom-{num}
    margin-bottom: 1em * num

/** Other */
.is-marginless
  margin: 0 !important

.is-paddingless
  padding: 0 !important

.is-radiusless
  border-radius: 0 !important

.is-shadowless
  box-shadow: none !important
